%table.table
  %thead
    %tr
      %th{:scope => "col"} #
      %th{:scope => "col"} Applicant name 
      %th{:scope => "col"} Job title
      %th{:scope => "col"} Status
  %tbody
    %tr
      %td
      %td= "#{job_application.user.first_name} #{job_application.user.last_name}"
      %td= job_application.job.title
      %td= job_application.status
      %td= link_to 'Show', job_application
      %td= link_to 'Edit', edit_job_application_path(job_application)
      %td= link_to 'Destroy', job_application, method: :delete, data: { confirm: 'Are you sure?' }
