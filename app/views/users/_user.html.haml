%table.table
  %thead
    %tr
      %th{:scope => "col"} #
      %th{:scope => "col"} First Name
      %th{:scope => "col"} Last Name
      %th{:scope => "col"} Email
      %th{:scope => "col"} Role
      %th{:scope => "col"} Applied for
      %th{:scope => "col"} Status
  %tbody
    %tr
      %th{:scope => "row"}
      %td= user.first_name
      %td= user.last_name
      %td= user.email
      %td= user.role
      %td= user.job_title
      %td= select_tag 'Application status', options_for_select(JobApplication.statuses.keys.map { |key| [key.humanize, key] }), selected: user.application_status, include_blank: true, id: "#{dom_id user}" 

